---
import '../styles/index.css';
import 'font-awesome/css/font-awesome.min.css';

import { nav } from '../config/nav.js';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Logo from '../components/Logo.astro';
import BaseHead from './BaseHead.astro';
import { fade } from "astro:transitions";
import SearchComponent from "astro-pagefind/components/Search";

interface Props {
	title: string;
	meta_description: string;
	body_class: string;
	image: string;
}
const { title, meta_description, image='/favicon.ico', body_class } = Astro.props;
---

<!doctype html>
<html class="no-js" lang="en" data-theme="default">
			
	<head>
		<BaseHead title={title} description={meta_description} image={image}></BaseHead>
	</head>

	<body class={body_class} transition:animate={fade({ duration: "0.2s" })}>			
		<Header rightMenu navData={nav} id="navID" slot="header">
			<span slot="logo">
				<Logo />
			</span>
		</Header>
		<SearchComponent id="search" className="pagefind-ui" uiOptions={{ showImages: true }} />
			<slot />
		<Footer>
	</body>
</html>